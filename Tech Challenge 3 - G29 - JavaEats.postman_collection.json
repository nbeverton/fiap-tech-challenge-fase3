          { "key": "X-User-Id", "value": "user-123" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"restaurantId\": \"rest-001\",\n  \"courierId\": \"courier-002\",\n  \"deliveryAddress\": \"456 Updated St\",\n  \"description\": \"Updated description\",\n  \"totalAmount\": 120.00,\n  \"orderTaxes\": 12.00\n}"
        },
