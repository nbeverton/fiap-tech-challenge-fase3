    "description": "CRUD operations for Orders with auto orderId and response validations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Order",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "X-User-Id", "value": "user-123" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"restaurantId\": \"rest-001\",\n  \"courierId\": \"courier-001\",\n  \"deliveryAddress\": \"123 Main St\",\n  \"description\": \"Order description\",\n  \"totalAmount\": 100.50,\n  \"orderTaxes\": 10.50\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": ["{{baseUrl}}"],
          "path": ["orders"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Capture orderId and save as collection variable",
              "var jsonData = pm.response.json();",
              "pm.collectionVariables.set(\"orderId\", jsonData.id);",
              "console.log('Saved orderId: ' + jsonData.id);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
